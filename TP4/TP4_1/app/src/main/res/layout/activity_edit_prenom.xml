<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditPrenom">

         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/TextBtnEditPrenom"
                android:fontFamily="cursive"
                android:textAlignment="center"
                android:typeface="serif"
                android:textSize="30dp" />

            <EditText
                android:id="@+id/editText5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:inputType="text|textPersonName"
                android:textAlignment="center"
                android:textSize="30dp"
                android:typeface="serif" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button2"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/TextBtnValiderDate"
                android:drawableLeft="@android:drawable/ic_input_add"
                android:fontFamily="cursive"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/background_light"
                android:textSize="30dp"
                style="@android:style/Widget.ActionButton.CloseMode"
                android:onClick="valider_prenom"/>

            <Button
                android:id="@+id/button4"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@android:drawable/ic_delete"
                android:fontFamily="cursive"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/background_light"
                android:textSize="30dp"
                style="@android:style/Widget.ActionButton.CloseMode"
                android:text="@string/TextBtnCancel"
                android:onClick="annuler_prenom"/>
        </LinearLayout>

    </LinearLayout>