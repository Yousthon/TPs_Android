<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorGreen"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/TextBtnEditPrenom"
        android:fontFamily="cursive"
        android:textAlignment="center"
        android:typeface="serif"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/textViewNom"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="wrap_content"
        android:background="@drawable/common_google_signin_btn_text_light_normal"
        android:inputType="text|textPersonName"
        android:textAlignment="center"
        android:textSize="30dp"
        android:typeface="serif" />

    <Button
        android:id="@+id/btnAfficher"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Btn_validate"
        android:drawableLeft="@android:drawable/ic_input_add"
        android:fontFamily="cursive"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/background_light"
        android:textSize="30dp"
        style="@android:style/Widget.ActionButton.CloseMode" />
</LinearLayout>